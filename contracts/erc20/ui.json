{
  "version": 1,
  "production": true,
  "id": "solui-repo-erc20",
  "title": "ERC-20",
  "description": "Deploy your own ERC-20 token and manage it.",
  "aboutUrl": "https://github.com/solui/demo",
  "image": {
    "url": "https://upload.wikimedia.org/wikipedia/commons/9/98/Solidity_logo.svg"
  },
  "panels": [
    {
      "id": "create",
      "title": "Create token",
      "description": "Deploy new ERC-20 tokens.",
      "image": {
        "url": "https://upload.wikimedia.org/wikipedia/commons/8/89/Google-Cloud-Functions.svg"
      },
      "inputs": [
        {
          "name": "name",
          "title": "Name",
          "type": "string",
          "validation": [
            {
              "type": "length",
              "min": "5",
              "max": "40"
            }
          ]
        },
        {
          "name": "symbol",
          "title": "Symbol",
          "type": "string",
          "validation": [
            {
              "type": "length",
              "min": "2",
              "max": "10"
            }
          ]
        },
        {
          "name": "initialSupply",
          "title": "Initial no. of tokens",
          "type": "int",
          "unit": "Tokens",
          "scale": "18",
          "validation": [
            {
              "type": "range",
              "min": "1",
              "max": "1000000000"
            }
          ]
        }
      ],
      "execs": [
        {
          "type": "deploy",
          "contract": "ERC20",
          "args": {
            "_name": "@input[name]",
            "_symbol": "@input[symbol]",
            "_initialSupply": "@input[initialSupply]"
          },
          "saveResultAsInput": "contractAddress"
        }
      ],
      "outputs": [
        {
          "title": "New contract address",
          "type": "address",
          "value": "@input[contractAddress]"
        }
      ]
    },
    {
      "id": "view",
      "title": "View token",
      "description": "View token details.",
      "image": {
        "url": "https://upload.wikimedia.org/wikipedia/commons/3/38/Info_Simple.svg"
      },
      "inputs": [
        {
          "name": "contractAddress",
          "title": "Token contract address",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true
            }
          ]
        }
      ],
      "execs": [
        {
          "type": "call",
          "contract": "ERC20",
          "address": "@input[contractAddress]",
          "method": "name",
          "saveResultAsInput": "tokenName"
        },
        {
          "type": "call",
          "contract": "ERC20",
          "address": "@input[contractAddress]",
          "method": "symbol",
          "saveResultAsInput": "tokenSymbol"
        },
        {
          "type": "call",
          "contract": "ERC20",
          "address": "@input[contractAddress]",
          "method": "totalSupply",
          "saveResultAsInput": "tokenSupply"
        }
      ],
      "outputs": [
        {
          "title": "Name",
          "type": "string",
          "value": "@input[tokenName]"
        },
        {
          "title": "Symbol",
          "type": "string",
          "value": "@input[tokenSymbol]"
        },
        {
          "title": "Total supply",
          "type": "int",
          "scale": "-18",
          "unit": "Tokens",
          "value": "@input[tokenSupply]"
        }
      ]
    },
    {
      "id": "view-balance",
      "title": "View balance",
      "description": "View balance.",
      "image": {
        "url": "https://upload.wikimedia.org/wikipedia/commons/3/38/Info_Simple.svg"
      },
      "inputs": [
        {
          "name": "contractAddress",
          "title": "Token contract address",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true
            }
          ]
        },
        {
          "name": "account",
          "title": "Account",
          "helpText": "The initial value will be your account address",
          "initialValue": "@env[account]",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true,
              "eoa": true
            }
          ]
        }
      ],
      "execs": [
        {
          "type": "call",
          "contract": "ERC20",
          "address": "@input[contractAddress]",
          "method": "balanceOf",
          "args": {
            "account": "@input[account]"
          },
          "saveResultAsInput": "balance"
        }
      ],
      "outputs": [
        {
          "title": "Balance",
          "type": "int",
          "unit": "Tokens",
          "scale": "-18",
          "value": "@input[balance]"
        }
      ]
    },
    {
      "id": "approve-allowance",
      "title": "Approve allowance",
      "description": "Approve other people to transfer on one's behalf.",
      "image": {
        "url": "https://upload.wikimedia.org/wikipedia/commons/7/73/Flat_tick_icon.svg"
      },
      "inputs": [
        {
          "name": "contractAddress",
          "title": "Token contract address",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true
            }
          ]
        },
        {
          "name": "spender",
          "title": "Spender",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true,
              "eoa": true
            }
          ]
        },
        {
          "name": "amount",
          "title": "Amount",
          "type": "int",
          "unit": "Tokens",
          "scale": "18",
          "validation": [
            {
              "type": "range",
              "min": "1",
              "max": "1000000000"
            }
          ]
        }
      ],
      "execs": [
        {
          "type": "send",
          "contract": "ERC20",
          "address": "@input[contractAddress]",
          "method": "approve",
          "args": {
            "spender": "@input[spender]",
            "amount": "@input[amount]"
          }
        }
      ]
    },
    {
      "id": "transfer",
      "title": "Send",
      "description": "Transfer tokens.",
      "image": {
        "url": "https://upload.wikimedia.org/wikipedia/commons/0/0c/Message_%28Send%29.png"
      },
      "inputs": [
        {
          "name": "contractAddress",
          "title": "Token contract address",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true
            }
          ]
        },
        {
          "name": "recipient",
          "title": "Recipient",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "eoa": true,
              "contract": true
            }
          ]
        },
        {
          "name": "amount",
          "title": "Amount to send",
          "type": "int",
          "unit": "Tokens",
          "scale": "18",
          "validation": [
            {
              "type": "range",
              "min": "1",
              "max": "1000000000"
            }
          ]
        }
      ],
      "execs": [
        {
          "type": "send",
          "contract": "ERC20",
          "address": "@input[contractAddress]",
          "method": "transfer",
          "args": {
            "recipient": "@input[recipient]",
            "amount": "@input[amount]"
          }
        }
      ]
    },
    {
      "id": "transfer-on-behalf",
      "title": "Send on behalf",
      "description": "Transfer tokens on behalf of someone.",
      "image": {
        "url": "https://upload.wikimedia.org/wikipedia/commons/0/0c/Message_%28Send%29.png"
      },
      "inputs": [
        {
          "name": "contractAddress",
          "title": "Token contract address",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true
            }
          ]
        },
        {
          "name": "from",
          "title": "From",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true,
              "eoa": true
            }
          ]
        },
        {
          "name": "to",
          "title": "To",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true,
              "eoa": true
            },
            {
              "type": "compareToField",
              "field": "from",
              "operation": "notEqual"
            }
          ]
        },
        {
          "name": "amount",
          "title": "Amount to send",
          "type": "int",
          "unit": "Tokens",
          "scale": "18",
          "validation": [
            {
              "type": "range",
              "min": "1",
              "max": "1000000000"
            }
          ]
        }
      ],
      "execs": [
        {
          "type": "send",
          "contract": "ERC20",
          "address": "@input[contractAddress]",
          "method": "transferFrom",
          "args": {
            "sender": "@input[from]",
            "recipient": "@input[to]",
            "amount": "@input[amount]"
          }
        }
      ]
    },
    {
      "id": "mint",
      "title": "Mint tokens",
      "description": "Mint new tokens and assign them to the caller balance.",
      "image": {
        "url": "https://upload.wikimedia.org/wikipedia/commons/d/de/717-money-bag.svg"
      },
      "inputs": [
        {
          "name": "contractAddress",
          "title": "Token contract address",
          "type": "address",
          "validation": [
            {
              "type": "allowedTypes",
              "contract": true
            }
          ]
        },
        {
          "name": "amount",
          "title": "Amount of ETH",
          "type": "int",
          "unit": "Tokens",
          "scale": "18",
          "validation": [
            {
              "type": "range",
              "min": "1",
              "max": "1000000000"
            }
          ]
        }
      ],
      "execs": [
        {
          "type": "send",
          "contract": "ERC20",
          "address": "@input[contractAddress]",
          "method": "mint",
          "transferAmount": "@input[amount]"
        }
      ]
    }
  ]
}
